<h1 class="text-center mt-5">List A Costume</h1>
<div class="container col-6">
  <%= simple_form_for [@costume] do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="form-input">
      <%= f.input :name, placeholder: "Add name of costume" %>
      <%= f.input :location, placeholder: "Add location of item" %>
      <%= f.input :price, placeholder: "Add price of item" %>
      <%= f.input :size, collection: %w[Small Medium Large] %>
      <%= f.input :photo, as: :file %>
    </div>
    <div class="form-actions">
      <div class="d-grid gap-2">
        <%= f.submit "Create a costume", class: "btn btn-primary mb-5" %>
      </div>
      <%= link_to "Previous", root_path, class: "btn btn-outline-secondary mb-5" %>
    </div>
  <% end %>
</div>
