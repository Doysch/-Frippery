<h1>Show Page</h1>

<div class="container">
  <div class="card-product mb-5 ">
    <img src="https://images.halloweencostumes.co.uk/products/43438/1-2/mens-crab-costume.jpg" />
    <div class="card-product-infos ">
      <h2><%= @costume.name %></h2>
      <div>
        <ul>
          <li><%= @costume.location %> </li>
          <li><%= @costume.price %> </li>
          <li><%= @costume.size %> </li>
        </ul>
        <%= link_to "<button>Book this Costume</button>".html_safe, new_costume_booking_path(@costume) %>
      </div>
    </div>
  </div>
</div>
<ul>
<li><%= link_to "<button>Edit this Costume</button>".html_safe, edit_costume_path %></li>
</div>
</div>
<li><%= link_to "<button>Back to Home</button>".html_safe, costumes_path %></li>
</ul>
</div>
