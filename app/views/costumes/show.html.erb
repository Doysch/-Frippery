<div class="container">
  <div class="row">
    <div class="col-6 my-5">
      <div class="card-product py-3">
        <%= cl_image_tag @costume.photo.key, class:"show-page-img"  %>
      </div>
    </div>
    <div class="col-6  my-5">
      <div class="card show-details">
        <ul>
          <li><i class="fa-solid fa-location-dot me-1" style="font-size:33px;"></i> <%= @costume.location %> </li>
          <li><i class="fa-solid fa-sterling-sign mx-2"></i><%= @costume.price %>0/day </li>
          <li><i class="fa-solid fa-shirt me-1"></i><%= @costume.size %> </li>
        </ul>
        <%= link_to "Book this Costume",  new_costume_booking_path(@costume), class: "btn btn-success" %>
      </div>

      <div style="width: 100%; height: 250px;" class="my-4"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
      <%= link_to "Back to List", costumes_path, class: "btn btn-outline-secondary"%>
      <%= link_to "Back to Home", root_path, class: "btn btn-outline-secondary" %>

    </div>
  </div>
</div>
